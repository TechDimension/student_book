<%= form_for @classes , :url => groups_path do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">New Class </h3>
        </div>
        <div class="panel-body">
          <p><%= f.text_field (:title) , class: "form-control", placeholder:"Enter Class Name: "  %></p>
          <p><%= f.text_field(:color_t , class: "form-control", type:"text", value:"pink" , id:"colorpicker", )  %></p>
        </div>
        <div class="modal-footer">
          <div class="modal-title">
        </div>    
        <%= f.hidden_field :user_id, :value => current_user.id.to_s %>
        <div  class="btn btn-default" id="buttoon"> Close</div>

        <span><%= f.submit nil, :class => "btn btn-success" %></span>
      </div>
    </div>
  </div>
<% end %>

<style>
    .colorpicker-2x .colorpicker-saturation {
        width: 200px;
        height: 200px;
    }
    
    .colorpicker-2x .colorpicker-hue,
    .colorpicker-2x .colorpicker-alpha {
        width: 30px;
        height: 200px;
    }
    
    .colorpicker-2x .colorpicker-color,
    .colorpicker-2x .colorpicker-color div {
        height: 30px;
    }
</style>

<input type="text" data-format="hex" id="cp8" value="primary"/>
